<Window x:Class="BennerWpf.Views.ProdutoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BennerWpf.ViewModels"
        Title="Cadastro de Produtos" Height="600" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Filtros de Pesquisa" Grid.Row="0" Margin="0,0,0,10" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Nome do Produto:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Width="200" Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Código:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Width="120" Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Faixa de Valor:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Width="80" ToolTip="Valor Mínimo" Text="{Binding ValorMinimo, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Text=" até " VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox Width="80" ToolTip="Valor Máximo" Text="{Binding ValorMaximo, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
                <Button Content="Filtrar" Width="80"  Height="20" Click="Filtrar_Click" VerticalAlignment="Bottom"/>

            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Produtos}"
              SelectedItem="{Binding ProdutoSelecionado}"
              AutoGenerateColumns="False" IsReadOnly="True"
              Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="120"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Dados do Produto" Grid.Row="2" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Nome:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding ProdutoSelecionado.Nome, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="Código:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Width="120" Text="{Binding ProdutoSelecionado.Codigo, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Valor (R$):" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Width="120" Text="{Binding ProdutoSelecionado.Valor, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Content="Novo" Width="80" Margin="0,0,10,0"
                        Command="{Binding IncluirCommand}" />
                    <Button Content="Salvar" Width="80" Margin="0,0,10,0"
                        Command="{Binding SalvarCommand}" />
                    <Button Content="Excluir" Width="80" Margin="0,0,10,0"
                        Command="{Binding ExcluirCommand}" />
                    <Button Content="Inicio" Width="80" Margin="0,0,10,0"
                       Click="Inicio_Click" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
