<Window x:Class="BennerWpf.Views.PessoaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoas" Height="700" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Filtros de Pesquisa" Grid.Row="0" Margin="0,0,0,10" Padding="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Nome:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Width="250"
                         Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="CPF:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBox Width="200"
                         Text="{Binding FiltroCPF, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Pessoas}"
              SelectedItem="{Binding PessoaSelecionada}"
              AutoGenerateColumns="False" IsReadOnly="True"
              Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="150"/>
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Dados da Pessoa Selecionada" Grid.Row="2" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Nome Completo:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Width="250"
                             Text="{Binding PessoaSelecionada.Nome, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <TextBlock Text="CPF:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Width="150"
                             Text="{Binding PessoaSelecionada.CPF, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Endereço:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding PessoaSelecionada.Endereco, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Novo" Width="80" Margin="0,0,10,0"
                        Command="{Binding IncluirCommand}" />
                    <Button Content="Salvar" Width="80" Margin="0,0,10,0"
                        Command="{Binding SalvarCommand}" />
                    <Button Content="Excluir" Width="80" Margin="0,0,10,0"
                        Command="{Binding ExcluirCommand}" />
                    <Button Content="Incluir Pedido" Width="120"
                        Click="AbrirPedido_Click" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Pedidos da Pessoa" Grid.Row="3" Margin="0,10,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5,5,0,10">
                    <CheckBox Content="Mostrar entregues" IsChecked="{Binding MostrarEntregues}" Margin="0,0,15,0"/>
                    <CheckBox Content="Mostrar pagos" IsChecked="{Binding MostrarPagos}" Margin="0,0,15,0"/>
                    <CheckBox Content="Mostrar pendentes" IsChecked="{Binding MostrarPendentes}" />
                </StackPanel>

                <DataGrid ItemsSource="{Binding PedidosDaPessoa}" AutoGenerateColumns="False" Height="200" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data da Venda" Binding="{Binding DataVenda}" Width="150"/>
                        <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="Forma de Pagamento" Binding="{Binding FormaPagamento}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTemplateColumn Header="Ações" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="Pago" Command="{Binding DataContext.MarcarPagoCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="0,0,5,0"/>
                                        <Button Content="Enviado" Command="{Binding DataContext.MarcarEnviadoCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="0,0,5,0"/>
                                        <Button Content="Recebido" Command="{Binding DataContext.MarcarRecebidoCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>