<Window x:Class="BennerWpf.Views.PedidoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BennerWpf.ViewModels" 
        xmlns:res="clr-namespace:BennerWpf.Resources"
        Title="Cadastro de Pedido" Height="600" Width="800">

    <Window.Resources>
        <res:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Seleção de Pessoa -->
        

        <!--<ComboBox Grid.Row="0" Width="300" Margin="0 0 0 10"
          ItemsSource="{Binding Pessoas}"
          SelectedItem="{Binding PessoaSelecionada}"
          DisplayMemberPath="Nome"
          IsEnabled="{Binding PessoaBloqueada, Converter={StaticResource InverseBoolConverter}}" />-->

        <!--<ComboBox ItemsSource="{Binding Pessoas}"
          SelectedItem="{Binding PessoaSelecionada}"
          IsEnabled="{Binding PessoaBloqueada, Converter={StaticResource InverseBoolConverter}}"
          Width="300" Margin="0 0 0 10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Nome}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>-->

        <ComboBox ItemsSource="{Binding Pessoas}"
          SelectedItem="{Binding PessoaSelecionada}"
          IsEnabled="{Binding PessoaBloqueada, Converter={StaticResource InverseBoolConverter}}"
          Width="300" Margin="0 0 0 10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Nome}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>







        <!-- Adição de Produtos -->
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <ComboBox Width="300" Margin="0 0 10 0"
                          ItemsSource="{Binding Produtos}"
                          SelectedItem="{Binding ProdutoSelecionado}"
                          DisplayMemberPath="Nome" />
                <TextBox Width="80" Margin="0 0 10 0"
                         Text="{Binding QuantidadeProduto}" />
                <Button Content="Adicionar Produto" Width="150"
                        Command="{Binding AdicionarProdutoCommand}" />
            </StackPanel>

            <DataGrid ItemsSource="{Binding ItensPedido}" AutoGenerateColumns="False" Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Produto" Binding="{Binding Produto.Nome}" Width="*"/>
                    <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Finalização -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
            <ComboBox Width="150" Margin="0 0 10 0"
                      SelectedItem="{Binding FormaPagamentoSelecionada}">
                <ComboBoxItem Content="Dinheiro" />
                <ComboBoxItem Content="Cartão" />
                <ComboBoxItem Content="Boleto" />
            </ComboBox>
            <TextBlock Text="Valor Total:" VerticalAlignment="Center" Margin="10 0 0 0"/>
            <TextBlock Text="{Binding ValorTotal}" VerticalAlignment="Center" Margin="5 0 10 0"/>
            <Button Content="Finalizar Pedido" Width="150"
                    Command="{Binding FinalizarPedidoCommand}" />
        </StackPanel>
        
    </Grid>
    
</Window>
